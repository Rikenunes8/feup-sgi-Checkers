<sxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="0" z="2" />
            <to x="0" y="0" z="2" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <spot id="A" enabled="1" angle="20" exponent="50">
            <location x="2" y="0" z="2" w="1.0" />
            <target x="0" y="0" z="2" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="0" linear="1" quadratic="0" />
        </spot>
    </lights>

    <textures>
        <texture id="moon" file="scenes/images/moon.png" />
    </textures>

    <materials>
        <material id="material" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="4" slices="32" stacks="50" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" slices="32" stacks="32" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="3" slices="16" loops="20" />
        </primitive>
        <primitive id="triangle">
            <triangle
                x1="0" y1="0" z1="0"
                x2="1" y2="0" z2="0"
                x3="0" y3="1" z3="0" />
        </primitive>
    </primitives>

    <animations>
    </animations>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder"/>
            </children>
        </component>
    </components>
</sxs>
